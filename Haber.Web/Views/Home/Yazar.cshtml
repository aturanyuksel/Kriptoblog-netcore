            @{ foreach (var haber in (List<HaberCl>)ViewBag.enCokOkunanlarListesi)
                                {
                                    if (haber.HaberResimleri == null || haber.HaberResimleri.Count == 0)
                                    {
                <li>
                    <div class="media wow fadeInDown">
                        <a href="#" class="media-left">
                            <img alt="Resim yok" src="">
