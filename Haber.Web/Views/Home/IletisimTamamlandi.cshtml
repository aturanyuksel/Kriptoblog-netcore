@using Haber.COM;
@{ ViewBag.Title = "Iletisim Tamamlandi";
                Layout = "~/Views/Shared/_Layout.cshtml"; }

<h2>IletisimTamamlandi</h2>

@section iletisimTamam{

    @ViewBag.mesaj
}



@section sonHaberlerkucuk{
    <div class="latest_newsarea">
        <span>Son Haberler</span>
        <ul id="ticker01" class="news_sticker">
            @foreach (var haber in (List<HaberCl>)ViewBag.haberSonList)
            {
                if (haber.HaberResimleri == null || haber.HaberResimleri.Count == 0)
                {
<li><a href="~/Home/HaberDetay/@haber.HaberID"><img src="" alt="">@haber.HaberBaslik</a></li> }
                    else
                    {
                        if (haber.HaberResimleri.Count > 0)
                        {

<li><a href="~/Home/HaberDetay/@haber.HaberID"><img src="~/HaberResimler/Galeri/@haber.HaberResimleri[0].ResimAdi" alt="">@haber.HaberBaslik</a></li>}
                    }


                }



        </ul>

    </div>
}

@section EnCokOkunanlar{
