                                    {
                <li>
                    <div class="media wow fadeInDown">
                        <a href="#" class="media-left">
                            <img alt="Resim yok" src="">
                        </a>
                        <div class="media-body">
                            <a href="~/Home/HaberDetay/@haber.HaberID" class="catg_title">@haber.HaberBaslik</a>
                        </div>
                    </div>
                </li> }
                                    else
                                    {
                <li>
                    <div class="media wow fadeInDown">
                        <a href="~/HaberResimler/Galeri/@haber.HaberResimleri[0].ResimAdi" class="media-left">
                            <img alt="img" src="~/HaberResimler/Galeri/@haber.HaberResimleri[0].ResimAdi">
                        </a>
                        <div class="media-body">
                            <a href="~/Home/HaberDetay/@haber.HaberID" class="catg_title">@haber.HaberBaslik</a>
                        </div>
                    </div>
                </li> }
                                } }

        </ul>
    </div>

}

